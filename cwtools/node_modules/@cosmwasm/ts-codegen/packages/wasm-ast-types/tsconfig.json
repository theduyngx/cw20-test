{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationDir": "./types",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test-utils",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}